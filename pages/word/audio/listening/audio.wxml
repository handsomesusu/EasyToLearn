<view class='container'>

  <text class='sound-title'>《大家的日语1》</text>
  <text class='sound-title'>{{playJapanesePart}}</text>
  <text class='sound-title'>第{{wordNumber}}个单词</text>
  <loading hidden="{{hidden}}">加载中...</loading>

  <view class='control-div'>
    <view class='button-miss' catchtap='autoSound'><text class='word-miss' catchtap='autoSound'>自动听写</text></view>
    <view class='button-miss' catchtap='lastSound'><text class='word-miss' catchtap='lastSound'>上一个</text></view>
    <view class='button-miss' catchtap='nextSound'><text class='word-miss' catchtap='nextSound'>下一个</text></view>
    <view class='button-miss' catchtap='showAnswers'><text class='word-miss'  catchtap='showAnswers'>看答案</text></view>
  </view>
